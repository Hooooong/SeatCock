<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="12dp"
        android:layout_margin="@dimen/beside_margin"
        android:elevation="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:background="@drawable/img_reservation"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackText"
                android:padding="10dp"
                android:textSize="18dp"
                android:text="예약 접수"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/colorGray"
            android:text="아래와 같이 예약 접수됩니다."/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorLightGray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/storeNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackText"
                android:layout_gravity="center"
                android:layout_margin="@dimen/text_margin"
                android:textSize="@dimen/large_textsize"/>

            <TextView
                android:id="@+id/storeAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/small_textsize"/>

            <!-- zone -->
            <LinearLayout
                android:id="@+id/zoneLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="Table No."
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/large_textsize" />

                <TextView
                    android:id="@+id/seatNumberTextVIew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/large_textsize"
                    android:textStyle="bold" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                style="@style/text_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_check_gray"
                />
            <TextView
                style="@style/text_normal"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/beside_margin"
                android:text="이름        :"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/normal_textsize"/>

            <TextView
                android:id="@+id/userNameTextView"
                style="@style/text_normal"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/beside_margin"
                android:textSize="@dimen/normal_textsize"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                style="@style/text_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_check_gray"
                />
            <TextView
                style="@style/text_normal"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/beside_margin"
                android:text="연락처     :"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/normal_textsize"/>

            <TextView
                android:id="@+id/userPhoneNumberTextView"
                style="@style/text_normal"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/beside_margin"
                android:textSize="@dimen/normal_textsize"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <ImageView
                style="@style/text_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_check_gray"
                />
            <TextView
                style="@style/text_normal"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/beside_margin"
                android:textColor="@color/colorBlackText"
                android:text="날짜        :"
                android:textSize="@dimen/normal_textsize"/>


            <!-- 예약한 날짜 보여주는 텍스트뷰-->
            <TextView
                android:id="@+id/reservationDateTextView"
                style="@style/text_normal"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/beside_margin"
                android:textSize="@dimen/normal_textsize"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="5">
            <ImageView
                style="@style/text_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_check_gray"
                />
            <TextView
                style="@style/text_normal"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/beside_margin"
                android:textColor="@color/colorBlackText"
                android:text="시간        :"
                android:textSize="@dimen/normal_textsize"/>

            <TextView
                android:id="@+id/reservationTimeTextView"
                style="@style/text_normal"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/beside_margin"
                android:textSize="@dimen/normal_textsize"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="5">
            <ImageView
                style="@style/text_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_check_gray"
                />
            <TextView
                style="@style/text_normal"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/beside_margin"
                android:textColor="@color/colorBlackText"
                android:text="인원        :"
                android:textSize="@dimen/normal_textsize"/>

            <TextView
                android:id="@+id/reservationPersonTextView"
                style="@style/text_normal"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/beside_margin"
                android:textSize="@dimen/normal_textsize"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reservationCancelTextView"
                android:layout_width="70dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="취소"
                android:layout_margin="@dimen/beside_margin"
                android:textColor="@color/colorBlackText"/>

            <TextView
                android:id="@+id/reservationOkTextView"
                android:layout_width="70dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="결제"
                android:layout_margin="@dimen/beside_margin"
                android:textColor="@color/colorBlackText"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>